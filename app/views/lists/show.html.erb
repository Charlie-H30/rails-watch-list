<h1><%= @list.name %></h1>

<ul>
  <% @bookmarks.each do |bookmark|%>
    <li>
    <h3><%= bookmark.movie.title %></h3>
    <p><%= bookmark.movie.overview %></p>
    <img style="width: 100px" src="<%= bookmark.movie.poster_url %>" alt="<%= bookmark.movie.title %>">
    <p><%= bookmark.movie.rating.round(1) %></p>
    <p><%= bookmark.comment%></p>
    <%= link_to "Delete", bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
    </li>
  <% end %>
</ul>


<%= link_to "Add a bookmark", new_list_bookmark_path(@list) %>
<%= link_to "Back", lists_path %>
